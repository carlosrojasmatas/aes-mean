<html ng-app="aesBackoffice">
  <head>
    <title>AES BackOffice</title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/posts.js"></script>
    <script src="/javascripts/dojos.js"></script>
    <script src="/javascripts/app.js"></script>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>

  </head>
  
  <body>

	  <div class="row">
	    <div class="col-md-7 col-md-offset-2">
        <div ng-controller="MainController as main">
            <div class="page-header">
              <h1>AES Backoffice</h1>
                <a href="#" ng-click="main.showPosts()">POSTS</a>
                <span> | </span> 
                <a href="#" ng-click="main.showDojos()">DOJOS</a>
    	  		</div>
            <div ng-show="main.page == 'posts'"> 
  	      	  <posts-page></posts-page>
            </div>
            <div ng-show="main.page == 'dojos'">
              <dojos-page></dojos-page>
            </div>
	     </div>
      </div>
	  </div>

 </body>
</html>