<div ng-controller="PostsController as p">

	<table class="table table-hover">

		<thead>
			<tr>
				<th>#</th>
				<th>T&iacute;tulo</th>
				<th>Tipo</th>
				<th>Texto</th>
				<th>Borrar</th>
			</tr>
		</thead>

		<tbody ng-repeat="post in p.posts">

			<tr ng-click="p.currentPost(post)" >
				<td >{{post.id}}</td>
				<td>{{post.title}}</td>
				<td>{{post.type}}</td>  
				<td>{{post.body}}</td>
				<td> <ng-button ng-click="deletePost(post)"></ng-button>  
			</tr>

		</tbody>

	</table>
</div>